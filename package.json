{
  "name": "react-navigation-library",
  "version": "0.2.0",
  "main": "dist/index.js",
  "module": "dist/navigation.esm.js",
  "typings": "dist/index.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "start": "tsdx watch",
    "build": "tsdx build",
    "test": "tsdx test --env=jsdom",
    "lint": "tsdx lint"
  },
  "peerDependencies": {
    "react": ">=16",
    "react-native": "^0.60.5",
    "react-native-gesture-handler": "^1.4.1",
    "react-native-reanimated": "^1.3.0",
    "react-native-screens": "^2.0.0-alpha.6"
  },
  "husky": {
    "hooks": {
      "pre-commit": "pretty-quick --staged"
    }
  },
  "prettier": {
    "printWidth": 80,
    "semi": true,
    "singleQuote": true,
    "trailingComma": "es5"
  },
  "devDependencies": {
    "@testing-library/jest-native": "^3.0.2",
    "@testing-library/react-native": "^5.0.0",
    "@types/jest": "^24.0.20",
    "@types/react": "^16.9.2",
    "@types/react-native": "^0.60.17",
    "babel-plugin-module-resolver": "^3.2.0",
    "husky": "^3.0.5",
    "metro-react-native-babel-preset": "^0.56.3",
    "prettier": "^1.18.2",
    "pretty-quick": "^1.11.1",
    "react": "^16.11.0",
    "react-native": "0.60.5",
    "react-native-gesture-handler": "^1.4.1",
    "react-native-reanimated": "^1.4.0",
    "react-native-screens": "^2.0.0-alpha.6",
    "react-test-renderer": "^16.11.0",
    "ts-jest": "^24.1.0",
    "tsdx": "^0.9.1",
    "tslib": "^1.10.0",
    "typescript": "^3.6.2"
  },
  "dependencies": {
    "@crowdlinker/react-native-pager": "^0.1.18-beta.1"
  },
  "jest": {
    "preset": "@testing-library/react-native",
    "modulePathIgnorePatterns": [
      "<rootDir>/example"
    ],
    "transformIgnorePatterns": [
      "node_modules/(?!(react-native|react-native-screens|react-native-reanimated)/)"
    ],
    "setupFilesAfterEnv": [
      "@testing-library/react-native/cleanup-after-each",
      "./test/setup.ts"
    ],
    "transform": {
      "^.+\\.(t)sx?$": "ts-jest"
    }
  }
}
